def generar_contraseña():
    # Pedir longitud de caracteres al usuario y validarcomprobar
    while True:
        try:
            longitud = int(input("Ingresa la longitud de caracteres que desea en la contraseña: "))
            if longitud > 0:
                break
            else:
                print("Por favor, ingresa un número mayor que 0.")
        except ValueError:
            print("Entrada invalida. Ingresa un número entero.")

    caracteres = "abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789!@#$%()-_=+"

    while True:
        # Generamos la contraseña aleatoria
        contraseña = ""
        for _ in range(longitud):
            contraseña += random.choice(caracteres)

        print("Contraseña generada:", contraseña)

        # Preguntamos al usuario si le gusta la contraseña
        respuesta = input("¿Te gusta esta contraseña? (s/n): ")
        if respuesta == 's':
            print("Contraseña creada con exito")
            break
        elif respuesta == 'n':
            print("Generando una nueva contraseña...")
        else:
            print("Respuesta no válida, por favor escribe 's' para sí o 'n' para no.")

# Ejecutamos función
generar_contraseña()   
